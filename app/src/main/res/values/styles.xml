<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="H1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#192e60</item>
        <item name="fontPath">fonts/NeueHaasGrotDisp-Bold.ttf</item>
    </style>

    <style name="H2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#192e60</item>
        <item name="fontPath">fonts/NeueHaasGrotDisp-Bold.ttf</item>
    </style>

    <style name="H3">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#192e60</item>
        <item name="fontPath">fonts/NeueHaasGrotDisp-Medium.ttf</item>
    </style>

    <style name="Strong">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#192e60</item>
        <item name="fontPath">fonts/NeueHaasGrotDisp-Medium.ttf</item>
    </style>

    <style name="Regular">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#192e60</item>
        <item name="fontPath">fonts/NeueHaasGrotDisp-Roman.ttf</item>
    </style>

</resources>
